<resources>
  <style name="MyTheme.Base" parent="Theme.AppCompat">
  </style>
  <style name="MyTheme.Light.Base" parent="Theme.AppCompat.Light">
  </style>

  <style name="MyTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
  </style>
  <style name="MyTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
  </style>

  <style name="MyTheme.Dialog" parent="android:Theme.Holo.Dialog"><!--Theme.AppCompat.Light.Dialog-->
  </style>
  <style name="MyTheme.Light.Dialog" parent="android:Theme.Holo.Light.Dialog">
    <!--Theme.AppCompat.Light.Dialog-->
  </style>

  <style name="MyTheme.Dialog.NoTitle" parent="MyTheme.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="MyTheme.Light.Dialog.NoTitle" parent="MyTheme.Light.Dialog">
    <item name="android:windowNoTitle">true</item>
